generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id            Int     @id @default(autoincrement())
  username      String  @unique 
  password      String 
  documents     Entity[]
  sharedFolders SharedFolder[]

  @@map("users")
}

enum EntityType {
  FOLDER
  FILE
}

model Entity {
  id              Int         @id @default(autoincrement())
  name            String
  url       String?
  type            EntityType
  size            Int?
  mimeType        String?
  createdAt       DateTime    @default(now())
  parentId        Int?   
  userId          Int
  user            User        @relation(fields: [userId], references: [id], onDelete: Cascade)

  parentFolder    Entity?         @relation("EntityParent", fields: [parentId], references: [id], onDelete: Cascade)
  childEntities   Entity[]        @relation("EntityParent")
  sharedFolders   SharedFolder[]

  @@index([parentId])
  @@index([userId])

  @@map("entities")
}

model Session {
  id          String   @id
  sid         String   @unique
  data        String   @db.Text
  expiresAt   DateTime

  @@map("sessions")
}

model SharedFolder {
  id          String    @id @default(uuid())
  userId      Int
  folderId    Int
  expiresAt   DateTime
  
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  folder Entity @relation(fields: [folderId], references: [id], onDelete: Cascade)

  @@map("shared_folders")
  @@index([userId])
  @@index([folderId])
}