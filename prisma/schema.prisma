generator client {
  provider = "prisma-client-js"
  output   = "../node_modules/.prisma/client"
}

datasource db {
  provider = "postgresql"
}

model User {
  id            Int            @id @default(autoincrement())
  username      String         @unique
  password      String
  documents     Entity[]
  sharedFolders SharedEntity[]

  @@map("users")
}

enum EntityType {
  FOLDER
  FILE
}

model Entity {
  id        Int        @id @default(autoincrement())
  name      String
  url       String?
  type      EntityType
  size      Int?
  mimeType  String?
  createdAt DateTime   @default(now())
  parentId  Int?
  userId    Int
  user      User       @relation(fields: [userId], references: [id], onDelete: Cascade)

  parentFolder  Entity?        @relation("EntityParent", fields: [parentId], references: [id], onDelete: Cascade)
  childEntities Entity[]       @relation("EntityParent")
  sharedFolders SharedEntity[]

  @@index([parentId])
  @@index([userId])
  @@map("entities")
}

model Session {
  id        String   @id
  sid       String   @unique
  data      String   @db.Text
  expiresAt DateTime

  @@map("sessions")
}

model SharedEntity {
  id        String   @id @default(uuid())
  userId    Int
  entityId  Int

  shareToken   String?   @unique
  shareExpires DateTime?

  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  entity Entity @relation(fields: [entityId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([entityId])
  @@map("shared_entities")
}

